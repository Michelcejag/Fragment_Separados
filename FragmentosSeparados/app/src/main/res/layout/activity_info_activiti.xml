<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_Animal_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/lista_animales"
            android:name="com.example.fragmentosseparados.Lista_Finales_Fragmentos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <FrameLayout
            android:id="@+id/fragment_info_animal"
            android:name="com.example.fragmentosseparados.Info_Animal_Activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>